{
  "name": "performance-enforcer",
  "version": "1.0.0",
  "description": "Performance budget enforcement for Next.js apps with deep bundle analysis, runtime metrics, and CI/CD integration",
  "main": "dist/index.js",
  "bin": {
    "performance-enforcer": "./dist/index.js"
  },
  "type": "module",
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "test": "vitest",
    "test:coverage": "vitest --coverage",
    "test:ui": "@vitest/ui",
    "lint": "eslint src",
    "lint:fix": "eslint src --fix",
    "format": "prettier --write \"src/**/*.ts\"",
    "typecheck": "tsc --noEmit"
  },
  "keywords": [
    "performance",
    "next.js",
    "bundle-analysis",
    "lighthouse",
    "web-vitals",
    "ci-cd",
    "github-actions"
  ],
  "author": "Your Name",
  "license": "MIT",
  "files": [
    "dist",
    "oclif.manifest.json"
  ],
  "dependencies": {
    "@lhci/cli": "^0.13.0",
    "better-sqlite3": "^11.10.0",
    "d3": "^7.9.0",
    "oclif": "^4.0.0",
    "octokit": "^4.0.0",
    "web-vitals": "^4.0.0",
    "winston": "^3.11.0",
    "yaml": "^2.5.0",
    "zod": "^3.22.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@octokit/types": "^16.0.0",
    "@types/better-sqlite3": "^7.6.0",
    "@types/d3": "^7.4.0",
    "@types/node": "^25.0.9",
    "@vitest/coverage-v8": "^2.0.0",
    "@vitest/ui": "^2.1.9",
    "eslint": "^9.0.0",
    "prettier": "^3.2.0",
    "tsx": "^4.21.0",
    "typescript": "^5.5.0",
    "typescript-eslint": "^8.53.1",
    "vitest": "^2.0.0"
  },
  "oclif": {
    "bin": "performance-enforcer",
    "dirname": "performance-enforcer",
    "commands": "./dist/commands",
    "topicSeparator": ":",
    "plugins": [
      "./dist/hooks"
    ]
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
